{
  "name": "Full Screen Menus",
  "author": "dankutron9000",
  "version": "v1.3",
  "description": "Extends the QAM and Main Menus to the bottom of the screen. Introduces adjustable menu widths.",
  "target": "Tweak",
  "manifest_version": 8,
  "inject": {
    "bigpicture.css": [
      "bigpicture"
    ],
    "full_width_mainmenu.css": [
      "MainMenu"
    ],
    "full_width_qam.css": [
      "QuickAccess"
    ]
  },
  "patches": {
    "Main Menu Width": {
      "default": "Off",
      "type": "slider",
      "values": {
        "Off": {
          "--main-menu-width": [
            "240px",
            "bigpicture",
            "MainMenu"
          ]
        },
        "50%": {
          "--main-menu-width": [
            "50vw",
            "bigpicture",
            "MainMenu"
          ]
        },
        "75%": {
          "--main-menu-width": [
            "75vw",
            "bigpicture",
            "MainMenu"
          ]
        },
        "100%": {
          "--main-menu-width": [
            "100vw",
            "bigpicture",
            "MainMenu"
          ]
        }
      }
    },
    "QAM Width": {
      "default": "Off",
      "type": "slider",
      "values": {
        "Off": {
          "--qam-width": [
            "348px",
            "bigpicture"
          ]
        },
        "50%": {
          "--qam-width": [
            "50vw",
            "bigpicture"
          ]
        },
        "75%": {
          "--qam-width": [
            "75vw",
            "bigpicture"
          ]
        },
        "100%": {
          "--qam-width": [
            "100vw",
            "bigpicture"
          ]
        }
      }
    }
  }
}
