{
  "name": "Full Screen Menus",
  "author": "dankutron9000",
  "version": "v1.2",
  "description": "Extends the QAM and Main Menus to the bottom of the screen. Can also extend both menus to full width.",
  "target": "Tweak",
  "manifest_version": 8,
  "inject": {
    "shared.css": [
      "bigpicture"
    ],
    "full_width_mainmenu_bigpicture.css": [
      "bigpicture"
    ],
    "full_width_mainmenu.css": [
      "MainMenu"
    ]
  },
  "patches": {
    "Main Menu Width": {
      "default": "Off",
      "type": "slider",
      "values": {
        "Off": {
          "--main-menu-width": [
            "240px",
            "bigpicture"
          ]
        },
        "25%": {
          "--main-menu-width": [
            "25vw",
            "bigpicture"
          ]
        },
        "50%": {
          "--main-menu-width": [
            "50vw",
            "bigpicture"
          ]
        },
        "75%": {
          "--main-menu-width": [
            "75vw",
            "bigpicture"
          ]
        },
        "100%": {
          "--main-menu-width": [
            "100vw",
            "bigpicture"
          ]
        }
      }
    }
  },
  "QAM Full Width": {
    "default": "No",
    "type": "checkbox",
    "values": {
      "No": {},
      "Yes": {
        "full_width_qam_bigpicture.css": [
          "bigpicture"
        ],
        "full_width_qam.css": [
          "QuickAccess"
        ]
      }
    }
  }
}
